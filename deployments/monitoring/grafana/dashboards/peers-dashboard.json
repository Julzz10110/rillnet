{
  "dashboard": {
    "title": "RillNet - Peers Dashboard",
    "tags": ["rillnet", "peers"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Connected Peers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rillnet_peers_connected_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Publishers vs Subscribers",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum by (peer_type) (rillnet_stream_peer_count)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Network Latency Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rillnet_network_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rillnet_network_latency_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rillnet_network_latency_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {
            "label": "Latency (seconds)",
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "legend": {"show": true}
      },
      {
        "id": 4,
        "title": "WebRTC Connection Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rillnet_webrtc_connection_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rillnet_webrtc_connection_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rillnet_webrtc_connection_duration_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (seconds)",
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "legend": {"show": true}
      },
      {
        "id": 5,
        "title": "Video Segment Download Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rillnet_video_segment_download_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rillnet_video_segment_download_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (seconds)",
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "legend": {"show": true}
      },
      {
        "id": 6,
        "title": "Peer Connection Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(rillnet_connections_total[5m])",
            "refId": "A",
            "legendFormat": "Connections/sec"
          }
        ],
        "yaxes": [
          {
            "label": "Connections/sec"
          },
          {
            "show": false
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {}
  }
}

