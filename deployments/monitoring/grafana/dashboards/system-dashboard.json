{
  "dashboard": {
    "title": "RillNet - System Dashboard",
    "tags": ["rillnet", "system"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Active Streams",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rillnet_streams_active_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Connected Peers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
        "targets": [
          {
            "expr": "rillnet_peers_connected_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "rillnet_connections_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Data Transfer Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(rillnet_data_exchanged_bytes_total[5m])",
            "refId": "A",
            "legendFormat": "Data Rate"
          }
        ],
        "yaxes": [
          {
            "label": "Bytes/sec",
            "format": "Bps"
          },
          {
            "show": false
          }
        ]
      },
      {
        "id": 5,
        "title": "Connection Duration Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rillnet_webrtc_connection_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rillnet_webrtc_connection_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rillnet_webrtc_connection_duration_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {
            "label": "Duration (seconds)",
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "legend": {"show": true}
      },
      {
        "id": 6,
        "title": "Network Latency",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rillnet_network_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rillnet_network_latency_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rillnet_network_latency_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "p99"
          }
        ],
        "yaxes": [
          {
            "label": "Latency (seconds)",
            "format": "s"
          },
          {
            "show": false
          }
        ],
        "legend": {"show": true}
      },
      {
        "id": 7,
        "title": "Stream Health Score Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rillnet_stream_health_score",
            "refId": "A",
            "legendFormat": "{{stream_id}}"
          }
        ],
        "yaxes": [
          {
            "label": "Health Score",
            "min": 0,
            "max": 100
          },
          {
            "show": false
          }
        ],
        "legend": {"show": true}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {}
  }
}

